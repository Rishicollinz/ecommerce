<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Category List</title>
    <style>
        #resultTable {
            max-width: 90%; /* Adjust the max-width as needed */
            margin: auto;
        }
        #ecomTitle{
          text-align: center;
        }
        #categoryTitle{
          max-width: 90%;
          margin:auto;
          text-transform: uppercase;
          
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
  <div id="ecomTitle">
      <h1>E-Commerce</h1>
  </div>
  <div id="categoryTitle">
            <button type="button" class="btn btn-dark ml-auto " id="allProd">All products</button><hr>
            <h6>Category List:</h6>
    </div>
  </div>
  <div id="resultTable">
      <table class="table">
          <thead class="table-dark">
              <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Category</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Date</th>
              </tr>
          </thead>
          <tbody id="categoryTableBody">
              <!-- Data will be dynamically added here -->
          </tbody>
      </table>
      <!-- <div id="pagination">
        <a href="/categoryList?page=1">1</a>
      </div> -->
      <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Fetch data from the server
            fetch('/api/categoryList')  // Assuming your server exposes an API endpoint
                .then(response => response.json())
                .then(data => {
                    // Populate the table with data
                    const tableBody = document.getElementById('categoryTableBody');
                    data.forEach(category => {
                        const row = `<tr>
                            <th scope="row">${category.id}</th>
                            <td><a href="/${category.category}?page=1&limit=10">${category.category}</a></td>
                            <td>${category.quantity}</td>
                            <td>${new Date(category.date).toLocaleDateString()}</td>
                        </tr>`;
                        tableBody.innerHTML += row;
                    });
                })
                .catch(error => console.error('Error fetching categories:', error));
        });
        //for all products button
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("allProd").addEventListener("click", function () {
                fetch('/productList?page=1&limit=10')
            .then(response => {
                // Check if the response status is OK (200-299)
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                // Navigate to the '/productList' URL
                window.location.href = '/productList';
            })
            .catch(error => {
                // Handle errors during the fetch request
                console.error('Fetch Error:', error);
            });
        });
});
    </script>
  </div>
</body>
</html>